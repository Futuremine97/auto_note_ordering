POSTGRES_USER=appuser
POSTGRES_PASSWORD=change_me
POSTGRES_DB=page_ocr
DATABASE_URL=postgresql+psycopg2://appuser:change_me@db:5432/page_ocr
TESSERACT_LANG=eng+kor+jpn
OCR_WORKERS=4

# Optional password gate for viewing photos
# If PHOTO_PASSWORD is empty, no login is required.
PHOTO_PASSWORD=
AUTH_SECRET=change_me
AUTH_COOKIE_SECURE=true
AUTH_COOKIE_TTL_HOURS=72

# Embedding model (SOTA-ish) for representation vectors
EMBEDDING_MODEL_NAME=intfloat/multilingual-e5-small
EMBEDDING_CACHE_DIR=/app/cache
EMBEDDING_TRAIN_EPOCHS=8
EMBEDDING_BATCH_SIZE=32
EMBEDDING_LEARNING_RATE=0.001

